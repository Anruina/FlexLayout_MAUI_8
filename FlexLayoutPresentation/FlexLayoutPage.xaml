<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlexLayoutPresentation.FlexLayoutPage"
             Title="FlexLayoutPage">
    
    <FlexLayout Direction="Column"
                AlignItems="Center"
                JustifyContent="SpaceEvenly">
        <Label Text="Much Flex Such Flex"
               FontSize="18"/>

        <Image Source="suchwow.png"
               HeightRequest="300"/>

        <Button 
                x:Name="WrapPageClick"
                Text="Wrapping with flex :D"
                Clicked="GoToWrapFlexPage"
                />
        
        <Label Text="FlexLayout as substitude for StackLayout"/>


    </FlexLayout>    
</ContentPage>